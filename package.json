{
  "license": "MIT",
  "scripts": {
    "build": "yarn clean && parcel build lib/index.js",
    "rebuild": "yarn clean && yarn build --no-cache",
    "clean": "rm -rf dist .cache",
    "app:build": "NODE_ENV=development parcel build app/index.html --public-url .",
    "app:serve": "parcel app/index.html --open",
    "lint": "eslint lib/**/*.js lib/**/*.vue"
  },
  "dependencies": {
    "ace-css": "^1.1.0",
    "text-mask-core": "^5.1.2"
  },
  "peerDependencies": {
    "vue": "^2.5.17"
  },
  "devDependencies": {
    "@babel/core": "^7.8.0",
    "@babel/plugin-transform-runtime": "^7.8.0",
    "@babel/preset-env": "^7.8.2",
    "@vue/component-compiler-utils": "^3.1.1",
    "babel-plugin-lodash": "^3.3.4",
    "normalize-html-whitespace": "^1.0.0",
    "parcel-bundler": "^1.12.4",
    "vue": "^2.6.11",
    "vue-hot-reload-api": "^2.3.4",
    "vue-template-compiler": "^2.6.11"
  },
  "optionalDependencies": {
    "babel-eslint": "^10.0.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-unicorn": "^16.1.1",
    "eslint-plugin-vue": "^6.1.2",
    "eslint-watch": "^6.0.1"
  },
  "babel": {
    "presets": [
      "@babel/env"
    ],
    "plugins": [
      "@babel/transform-runtime",
      "lodash"
    ]
  },
  "browserslist": [
    ">0.6%",
    "not ie 11",
    "not op_mini all"
  ],
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:vue/recommended",
      "plugin:promise/recommended",
      "plugin:unicorn/recommended",
      "airbnb-base"
    ],
    "plugins": [
      "vue",
      "promise",
      "no-loops",
      "unicorn"
    ],
    "parserOptions": {
      "parser": "babel-eslint",
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true
      }
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 80
        }
      ],
      "vue/html-indent": [
        "error",
        2
      ],
      "vue/script-indent": [
        "error",
        2,
        {
          "baseIndent": 1
        }
      ],
      "quotes": [
        "error",
        "double"
      ],
      "promise/prefer-await-to-callbacks": "error",
      "promise/prefer-await-to-then": "error",
      "no-loops/no-loops": 2,
      "indent": "off",
      "import/no-unresolved": "off",
      "vue/max-attributes-per-line": "off"
    }
  }
}
