{
  "license": "MIT",
  "scripts": {
    "serve": "parcel lib/index.html --open",
    "build": "yarn clean && parcel build lib/index.js",
    "build:app": "parcel build lib/index.html --public-url .",
    "rebuild": "yarn clean && yarn build --no-cache",
    "clean": "rm -rf dist .cache",
    "lint": "eslint lib/**/*.js lib/**/*.vue"
  },
  "dependencies": {
    "tachyons": "^4.11.1"
  },
  "peerDependencies": {
    "vue": "^2.5.17"
  },
  "devDependencies": {
    "@vue/component-compiler-utils": "^2.1.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "parcel-bundler": "^1.9.7",
    "parcel-plugin-purifycss": "^1.0.2",
    "vue": "^2.5.17",
    "vue-hot-reload-api": "^2.3.0",
    "vue-template-compiler": "^2.5.17"
  },
  "optionalDependencies": {
    "babel-eslint": "^8.2.6",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-html": "^4.0.5",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-unicorn": "^5.0.0",
    "eslint-plugin-vue": "^4.7.1",
    "eslint-watch": "^4.0.2"
  },
  "babel": {
    "presets": [
      "env"
    ],
    "plugins": [
      "transform-runtime"
    ]
  },
  "browserslist": [
    ">0.25%",
    "not ie 11",
    "not op_mini all"
  ],
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:vue/recommended",
      "plugin:promise/recommended",
      "plugin:unicorn/recommended",
      "airbnb-base"
    ],
    "plugins": [
      "vue",
      "promise",
      "no-loops",
      "unicorn"
    ],
    "parserOptions": {
      "parser": "babel-eslint",
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true
      }
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 80
        }
      ],
      "vue/html-indent": [
        "error",
        2
      ],
      "vue/script-indent": [
        "error",
        2,
        {
          "baseIndent": 1
        }
      ],
      "quotes": [
        "error",
        "double"
      ],
      "promise/prefer-await-to-callbacks": "error",
      "promise/prefer-await-to-then": "error",
      "no-loops/no-loops": 2,
      "indent": "off",
      "import/no-unresolved": "off",
      "vue/max-attributes-per-line": "off"
    }
  }
}
